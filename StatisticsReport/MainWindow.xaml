<Window x:Class="StatisticsReport.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StatisticsReport"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Importar" HorizontalAlignment="Left" Margin="10,24,0,0" VerticalAlignment="Top" Height="31" Width="70" Click="Button_Click"/>
        <Label x:Name="labelToChange" Content="../" HorizontalAlignment="Left" Margin="96,29,0,0" VerticalAlignment="Top"/>
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=20}" Margin="10,81,10,0" SelectionChanged="DataGrid_SelectionChanged"/>

    </Grid>
</Window>
